{% extends 'base.html.twig' %}

{% block body %}
	<h3>
		{{ article.titre }}
	</h3>
	<p>Publié le
		{{ article.date | date("d/m/Y")  }}</p>
	<p>
		<img src="{{ asset('images/articles/' ~ article.imageSrc ) }}" alt="">
	</p>
	<p>
		{{ article.contenu }}
	</p>
	<hr>
	<article>
		{{ form(form) }}
		</article>
		<hr>
		<article>
			<h3>Commentaires</h3>
			{% for commentaire in article.commentaires %}
				<h4>{{ commentaire.titre }}</h4>
				<p>{{ "Publié le " ~ commentaire.date | date('d/m/Y') }}</p>
				<p>{{ commentaire.texte }}</p>
			{% endfor %}
		</article>

	{% endblock %}
